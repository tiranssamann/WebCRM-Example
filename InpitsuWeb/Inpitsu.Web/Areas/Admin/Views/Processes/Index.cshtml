@model IEnumerable<Inpitsu.Data.DtoObjects.ProcessDto>

@{
    ViewData["Title"] = "Processes";
}
<style>
    .inputPag:hover {
        background: #D6EAF8;  /* Цвет фона под ссылкой */
        cursor: pointer;
       }
</style>
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard v2</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">
        <h3>Задачи</h3>

        <div class="card">
            <div class="card-body">
                <div style="display:flex; width:100%; justify-content: space-between;">
                    <div>
                        <form role="form" class="text-start" method="get" asp-controller="Processes" asp-action="Index" id="ProcessPagination">
                            <div class="input-group input-group-outline mb-3">
                                <label for="formType" style="margin: 10px">Кол-во:</label>
                                <select class="form-control selectpicker" data-style="btn btn-link" aria-label="Default select example" id="PageSize" name="PageSize"
                                        style="
                    width: 50px !important;
                    height: 35px;
                    flex: none;"
                                        onchange='$("#ProcessPages").val("1"); $( "#ProcessPagination" ).submit();'>
                                    <option value="" selected disabled hidden>@ViewData["PaginationPageSize"]</option>
                                    <option value=10>10</option>
                                    <option value=15>15</option>
                                    <option value=20>20</option>
                                    <option value=30>30</option>
                                    <option value=40>40</option>
                                    <option value=50>50</option>
                                    <option value=60>60</option>
                                    <option value=70>70</option>
                                    <option value=80>80</option>
                                    <option value=90>90</option>
                                    <option value=100>100</option>
                                </select>

                                <label for="FormsCount" style="margin: 10px">Найдено записей:</label>
                                <span class="input" role="textbox"
                                      style="border: 1px solid #ccc;font-family: inherit;font-size: inherit;padding:6px;height: 35px; " readonly>
                                    @ViewData["ProcessCount"]
                                </span>

                                <label for="FormPages" style="margin: 10px">Страницы:</label>
                                @{
                                    int pageCount = (int)Math.Ceiling(double.Parse(ViewData["ProcessCount"].ToString()) / int.Parse(ViewData["PaginationPageSize"].ToString()));
                                    int nextPage = int.Parse(string.Format("{0}", ViewData["PaginationPageNumber"])) + 1;
                                    if (nextPage >= pageCount) nextPage = pageCount;
                                    int previousPage = int.Parse(string.Format("{0}", ViewData["PaginationPageNumber"])) - 1;
                                    if (previousPage <= 0) previousPage = 1;
                                    int pageNumber = int.Parse(string.Format("{0}", ViewData["PaginationPageNumber"]));
                                }
                                <span class="inputPag" role="textbox" onclick='$("#ProcessPages").val("1");  $("#PageSize").val("@ViewData["PaginationPageSize"]"); $( "#ProcessPagination" ).submit();'
                                      style="border: 1px solid #ccc;font-family: inherit;font-size: inherit;padding:6px;height: 35px;" readonly>
                                    <strong style="margin-top:7px !important;">
                                        <a style="color:#2980B9;padding-top:9px !important;">First</a>
                                    </strong>
                                </span>
                                @if (pageNumber > 3)
                                {
                                    <span class="inputPag" role="textbox" onclick='$("#ProcessPages").val("@(pageNumber - 3)");  $("#PageSize").val("@ViewData["PaginationPageSize"]"); $( "#ProcessPagination" ).submit();'
                                      style="border: 1px solid #ccc;font-family: inherit;font-size: inherit;padding:6px;height: 35px;" readonly>

                                        <a>
                                            ...
                                        </a>
                                    </span>
                                }
                                @if (pageNumber != previousPage)
                                {
                                    <span class="inputPag" role="textbox" onclick='$("#ProcessPages").val("@previousPage");  $("#PageSize").val("@ViewData["PaginationPageSize"]"); $( "#ProcessPagination" ).submit();'
                                      style="border: 1px solid #ccc;font-family: inherit;font-size: inherit;padding:6px;height: 35px;" readonly>

                                        <a>
                                            @previousPage
                                        </a>
                                    </span>
                                }
                                <span class="inputPag" role="textbox"
                                      style="border: 1px solid #ccc;font-family: inherit;font-size: inherit;padding:6px;height: 35px;" readonly>

                                    <strong style="margin-top:7px !important; color:#2980B9;">
                                        @ViewData["PaginationPageNumber"]
                                    </strong>
                                </span>
                                <input type="hidden" readonly name="PageNumber" id="ProcessPages" class="form-control" value="@ViewData["PaginationPageNumber"]"
                                       style=" width: 35px !important; height: 35px; flex: none;" />
                                @if (pageNumber != nextPage)
                                {
                                    <span class="inputPag" role="textbox" onclick='$("#ProcessPages").val("@nextPage"); $("#PageSize").val("@ViewData["PaginationPageSize"]"); $( "#ProcessPagination" ).submit();'
                                      style="border: 1px solid #ccc;font-family: inherit;font-size: inherit;padding:6px;height: 35px; " readonly>

                                        <a>
                                            @nextPage
                                        </a>
                                    </span>
                                }
                                @if (pageNumber < pageCount - 2)
                                {
                                    <span class="inputPag" role="textbox" onclick='$("#ProcessPages").val("@(pageNumber + 3)");  $("#PageSize").val("@ViewData["PaginationPageSize"]"); $( "#ProcessPagination" ).submit();'
                                      style="border: 1px solid #ccc;font-family: inherit;font-size: inherit;padding:6px;height: 35px;" readonly>

                                        <a>
                                            ...
                                        </a>
                                    </span>
                                }
                                <span class="inputPag" role="textbox" onclick='$("#ProcessPages").val("@pageCount");  $("#PageSize").val("@ViewData["PaginationPageSize"]"); $( "#ProcessPagination" ).submit();'
                                      style="border: 1px solid #ccc;font-family: inherit;font-size: inherit;padding:6px;height: 35px;" readonly>
                                    <strong style="margin-top:7px !important;">
                                        <a style="color:#2980B9;padding-top:9px !important;">Last</a>
                                    </strong>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>


            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover m-0">
                    <thead style=" position: sticky; top:-1px; z-index:500;">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Название</th>
                            <th scope="col">Current</th>
                            <th scope="col">Author</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Name</td>
                                <td>@item.Current</td>
                                <td>@item.Author</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
@section scripts
{
<script type="text/javascript">
     var deleteConfirm = function (val,val2) {
         $('#deletedValueName').text(val);
         $('#id').text(val2);
         $('#delete-conformation').modal('show');
     }
     //call this function after click on confirm delete button
     var deleteData = function () {
     $('#divLoading').show();
     var id = $('#id').text();
     $.ajax({
         type: "POST",
         url: '@Url.Action("DeleteProcess","Processes", new { Area = "Admin" })',
         data:{id: id},
         success: function (result) {
            $("#delete-conformation").modal('hide');
            location.reload();
         },
         error: function () {
             $("#delete-conformation").modal('show');
         }
     });

    }
    var HideModalDelete = function (){
        $("#delete-conformation").modal('hide');
    }

</script>
}